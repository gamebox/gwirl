@*****************
* Test Component *
*****************@
@(name string, index int)

<div @if index == 0 { class="first" }>
    @if index > 0 {
        <hr />
    }
    @if name == "Jeff" {
        <h2>JEFF</h2>
    } @else if name == "Sue" {
        <h2>SuE</h2> {
    } @else if name == "Bob" {
        <h2>B.O.B.</h2>
    } @else {
        <h2>@name</h2>
    }

    @Card("title") {
        <p>This is content in the card</p>
    } {
        <button>Card action</button>
    }
</div>
